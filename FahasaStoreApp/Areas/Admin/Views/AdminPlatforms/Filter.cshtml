@using FahasaStore.Models
@using FahasaStoreApp.Components
@using FahasaStoreApp.Models.DTOs
@using FahasaStoreApp.Models.ViewModels
@model FilterVM<PlatformExtend>

@{
    TempData["NameController"] = "AdminPlatforms";

    var paged = Model.Paged;
    var platformExtend = new PlatformExtend();
}

<div id="totalItemDiv" TotalItemCount="@paged.PagedNavigation.TotalItemCount">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => platformExtend.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => platformExtend.PlatformName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => platformExtend.ImageUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => platformExtend.Link)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in paged.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlatformName)
                    </td>
                    <td>
                        <img src="@item.ImageUrl" alt="Image" width="50" height="50" class="object-fit-contain" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Link)
                    </td>
                    <td>
                        <a href="/Admin/@TempData["NameController"]/Edit" class="btn btn-outline-primary" IdValue="@item.Id" onclick="HandlerCRUD(this, event)"><i class="bi bi-pencil"></i></a> |
                        <a href="/Admin/@TempData["NameController"]/Delete" class="btn btn-outline-danger" IdValue="@item.Id" onclick="HandlerCRUD(this, event)"><i class="bi bi-trash3"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @(await Html.RenderComponentAsync<PaginatedComponent>(RenderMode.ServerPrerendered, new { pagedNavigation = paged.PagedNavigation, formId = "Filter", renderINId = "boxData" }))
</div>

<script>
    $('#TotalItemCount').text($('#totalItemDiv').attr('TotalItemCount'));
</script>